<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>User Profile</title>
  </head>
  <body
    class="bg-zinc-900 text-white flex flex-col items-center justify-center min-h-screen"
  >
    <!-- Buttons -->
    <div class="mt-6 flex gap-3 absolute right-12 top-4">
      <a
        href="/logout"
        class="bg-red-600 hover:bg-red-700 text-white text-sm px-4 py-2 rounded-lg transition"
      >
        Logout
      </a>
    </div>

    <!-- post-input  -->
    <div class="post-input">
      <h1 class="text-2xl font-bold text-blue-500">Hello, Azad</h1>
      <p>You can create a new post:</p>
      <form action="/post" method="post">
        <input
          name="content"
          type="text"
          class="p-4 bg-gray-500/10 rounded-xl my-3 min-w-[500px] min-h-full"
          placeholder="What's on your mind?"
        />
        <br />
        <input
          type="submit"
          class="p-3 py-2 bg-green-500 cursor-pointer active:bg-green-600 rounded-xl my-3"
          value="Create a new post"
        />
      </form>
    </div>

    <!-- post-output -->
    <div class="post-output my-6">
      <p>Your Post:</p>
      <div class="posts my-2 p-4">
        <% user.posts.forEach(function(post){ %>
        <div class="post-card rounded-2xl bg-gray-500/10 p-4 my-4">
          <a href="#" class="text-blue-500">@<%= user.email %></a>
          <p class="my-2"><%= post.content %></p>
          <small><%= post.likes.length%> likes</small>
          <span class="flex gap-4 pt-2">
            
            <a href="/like/<%=post._id%>" class="active:text-red-500 hover:text-red-500">
              <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"  %>
            </a>
            <a href="#" class="text-gray-500">Edit</a>
          </span>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
